# OSX-specific aliases
alias im="open -a Preview"
alias vi="/usr/local/bin/vim"
alias vim="/usr/local/bin/vim"

# Make sure Homebrew packages take precedence over system packages
export PATH=/usr/local/bin:$PATH

# Configure pip
export PIP_REQUIRE_VIRTUALENV=true	   # Restrict pip usage to within virtualenvs
gpip(){
	PIP_REQUIRE_VIRTUALENV="" pip "$@"
} # gpip is a new command which will install things globally

# Configure virtualenvwrapper
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/Dev
source /usr/local/bin/virtualenvwrapper.sh

# Virtualenv workon cd into project directory
CMD='proj_name=$(basename $VIRTUAL_ENV); cd $PROJECT_HOME/$proj_name'
FILE=$WORKON_HOME/postactivate
grep -q -F "$CMD" "$FILE" || echo "$CMD" >> "$FILE"

# mkvirtualenv3 makes python3 virtualenv
alias mkvirtualenv3="mkvirtualenv -p python3"
