# Make sure Homebrew packages take precedence over system packages
export PATH=/usr/local/bin:$PATH

# Alias Python and pip
alias python="python3"
alias pip="pip3"

# Configure pip
export PIP_REQUIRE_VIRTUALENV=true	   # Restrict pip usage to within virtualenvs
gpip(){
	PIP_REQUIRE_VIRTUALENV="" pip "$@"
} # gpip is a new command which will install things globally

# Configure virtualenvwrapper
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/Dev
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python3
export VIRTUALRNVWRAPPER_ENV=/usr/local/bin/virtualenv
export VIRTUALENVWRAPPER_WORKON_CD=1
source /usr/local/bin/virtualenvwrapper.sh

# Install Sublime Text Settings
cp -r Preferences.sublime-settings ~/Library/Application\ Support/Sublime\ Text*/Packages/User 2> /dev/null
